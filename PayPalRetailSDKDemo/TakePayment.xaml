<Window x:Class="Net4WPFDemo.TakePayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TakePayment" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="292*"/>
            <ColumnDefinition Width="169*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="amountField" Height="40" Margin="50,66,50,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Text="1.00" HorizontalContentAlignment="Right" Padding="0,0,10,0" Grid.ColumnSpan="3"/>
        <Label Content="Amount" Margin="0,35,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="18" Grid.ColumnSpan="3"/>
        <Button Content="Charge" HorizontalAlignment="Left" Margin="76,139,0,0" VerticalAlignment="Top" Width="268" Height="38" FontSize="18" Grid.ColumnSpan="2" Grid.Column="1" Click="Button_Click"/>
        <TextBlock x:Name="messageTextBlock" Margin="20,200,20,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" TextAlignment="Center" Height="100" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
